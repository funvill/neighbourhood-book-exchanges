<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grassGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#90EE90;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#228B22;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Sky background -->
  <rect width="800" height="400" fill="url(#skyGradient)"/>
  
  <!-- Ground -->
  <rect y="400" width="800" height="200" fill="url(#grassGradient)"/>
  
  <!-- Little Free Library Structure -->
  <!-- Post -->
  <rect x="390" y="250" width="20" height="200" fill="#8B4513"/>
  
  <!-- Library box -->
  <rect x="300" y="150" width="200" height="150" fill="#4169E1" stroke="#000" stroke-width="2"/>
  
  <!-- Roof -->
  <polygon points="280,150 400,80 520,150" fill="#8B0000" stroke="#000" stroke-width="2"/>
  
  <!-- Door -->
  <rect x="350" y="200" width="100" height="80" fill="#FFE4B5" stroke="#000" stroke-width="1"/>
  
  <!-- Door handle -->
  <circle cx="430" cy="240" r="3" fill="#000"/>
  
  <!-- Books inside -->
  <rect x="360" y="210" width="8" height="60" fill="#FF6347"/>
  <rect x="370" y="215" width="8" height="55" fill="#32CD32"/>
  <rect x="380" y="208" width="8" height="62" fill="#FFD700"/>
  <rect x="390" y="212" width="8" height="58" fill="#FF69B4"/>
  <rect x="400" y="209" width="8" height="61" fill="#00CED1"/>
  <rect x="410" y="214" width="8" height="56" fill="#DDA0DD"/>
  <rect x="420" y="211" width="8" height="59" fill="#F0E68C"/>
  
  <!-- Sign -->
  <rect x="320" y="320" width="160" height="40" fill="#FFFAF0" stroke="#000" stroke-width="1"/>
  
  <!-- Text on sign -->
  <text x="400" y="335" font-family="Arial, sans-serif" font-size="12" text-anchor="middle" fill="#000">Little Free Library</text>
  <text x="400" y="350" font-family="Arial, sans-serif" font-size="10" text-anchor="middle" fill="#000">Take a Book, Leave a Book</text>
  
  <!-- Some decorative flowers -->
  <circle cx="250" cy="450" r="8" fill="#FF69B4"/>
  <circle cx="255" cy="445" r="6" fill="#FFB6C1"/>
  <rect x="252" y="458" width="3" height="15" fill="#228B22"/>
  
  <circle cx="550" cy="460" r="8" fill="#FFD700"/>
  <circle cx="545" cy="455" r="6" fill="#FFFFE0"/>
  <rect x="547" y="468" width="3" height="15" fill="#228B22"/>
</svg>
